<UserControl x:Class="PreviewClickSample.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dxp="http://schemas.devexpress.com/winfx/2008/xaml/printing">

    <dxp:DocumentPreview AutoCreateDocument="True">
        <dxp:DocumentPreview.Model>
            <dxp:ReportPreviewModel ReportTypeName="PreviewClickSample.Web.XtraReport1"
                                    ServiceUri="../ReportService.svc"
                                    PreviewMouseMove="ReportPreviewModel_PreviewMouseMove"
                                    PreviewClick="ReportPreviewModel_PreviewClick" />
        </dxp:DocumentPreview.Model>
    </dxp:DocumentPreview>
</UserControl>
